generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       String  @id
  name     String
  imageUrl String?

  messages  Message[]
  reactions Reaction[]
}

model Channel {
  id        String  @id
  name      String  @unique
  isGeneral Boolean

  messages Message[]
}

enum MessageType {
  NORMAL
  THREAD_PARENT
  THREAD_CHILD
  THREAD_CHILD_BROADCAST
}

model Message {
  id        String      @id
  ts        String
  isoDate   String
  text      String
  blocks    Json?
  type      MessageType
  channelId String
  userId    String
  parentId  String?

  user          User       @relation(fields: [userId], references: [id])
  channel       Channel    @relation(fields: [channelId], references: [id])
  threadParent  Message?   @relation("message_thread", fields: [parentId], references: [id])
  threadReplies Message[]  @relation("message_thread")
  reactions     Reaction[]

  @@index([ts])
  @@index([channelId])
  @@index([userId])
}

model Reaction {
  id        String @id
  name      String
  messageId String
  userId    String

  message Message @relation(fields: [messageId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([messageId])
}
